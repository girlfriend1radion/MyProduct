<Window x:Class="MyProduct.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyProduct"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="368*"/>
            <RowDefinition Height="29*"/>
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="0" Fill="#FFB5D5CA"></Rectangle>
        <Image Source="Resources/logo.png" HorizontalAlignment="Left"></Image>
        <TextBlock x:Name="TitlePage" FontSize="20" HorizontalAlignment="Center">MyProduct</TextBlock>
        <Button Width="40" Height="20" HorizontalAlignment="Right" Margin="55 0" Style="{StaticResource MyButton}" Content="Назад" x:Name="BackBTN" Click="BackBTN_Click"/>
        <Button Width="40" Height="20" HorizontalAlignment="Right" Margin="10 0" Style="{StaticResource MyButton}" Content="Выход" Click="Button_Click"></Button>
        <Frame x:Name="MyFrame" Grid.Row="1" NavigationUIVisibility="Hidden"></Frame>
        <Rectangle Grid.Row="2" Fill="#FFB5D5CA"></Rectangle>
    </Grid>
</Window>
